<html>
<head>
<style>
td {
  border-bottom: 1px solid #ddd;
  text-align: left;
}

tr:nth-child(even){background-color: #f2f2f2;}
tr:hover {background-color: #ddd;}

table {
  border-collapse: collapse;
  width: 35%;
}
</style>
</head>

<body>

<h1> Discover Movies </h1>
<br>
<br>
<%= button_to "Top Rated Movies", discover_dashboard_path(@user), params: { query: 'top_rated' }, method: :get %>
<br>
<br>
<%= form_with url: discover_dashboard_path(@user), method: :get do |form| %>
  <%= form.text_field :query %>
  <%= form.submit "Find Movies" %>
<% end %>

<% if !@top_movies.empty? %>
  <div id="top_40_movies">
  <h3> <%= button_to "Discover Page", discover_dashboard_path(@user), method: :get %> </h3>
  <h2>Top 40 Movies</h2>
    <table>
        <% @top_movies.each do |movie| %>
      <tr>
          <td><%= link_to movie.title, dashboard_movie_path(movie.id) %></td>
          <td><%= number_with_precision(movie.vote_average, precision: 1) %> / 10</td>
      </tr>
        <% end %>
    </table>
  </html>
  </div>
  <% elsif !@movies.empty? %>
    <div id="search_results">
      <% if @movies.include?("No Movies Found, Please Try Again") %>
        <h2> <%= "No Movies Found, Please Try Again" %> </h2>
      <% else %>
        <h3> <%= button_to "Discover Page", discover_dashboard_path(@user), method: :get %> </h3>
        <h2> Movie Results for: <%= @search %> </h2>
          <table>
            <% @movies.each do |movie| %>
          <tr> 
              <td><%= link_to movie.title, dashboard_movie_path(@user, movie.id) %></td>
              <td><%= number_with_precision(movie.vote_average, precision: 1) %> / 10</td>
          </tr>
      <% end %> 
    <% end %>
    </table>
    </html>
  </div>
  <% end %>
  
  </body>