<h1><%= @movie.title %></h1>


<%= button_to "Create Viewing Party for #{@movie.title}", new_dashboard_movie_viewing_party_path(@user, @movie.id), method: :get%>

<%= button_to "Discover Page", discover_dashboard_path(@user), method: :get%>

<p>Vote Average: <%= @movie.vote_average %></p>

<p>Runtime: <%= @movie.runtime / 60 %>h <%= @movie.runtime % 60 %>min</p>

<div id="genre">
 <p>Genre(s):</p>
  <ul>
   <% @movie.genre.map do |genre|%>
     <li><%= genre %></li>
   <% end %>
  </ul>
</div>

<p>Summary: <%= @movie.summary %></p>

<div id="cast">
 <p> Cast <% @movie.cast.each do |cast_mem| %></p>
   <p><%= cast_mem.name %> / <%= cast_mem.character %></p>
 <% end %>
</div>

<p><%= @movie.reviews.count %> Reviews</p>

<div id="reviews">
 <% @movie.reviews.each do |review| %>
  <p> Author: <%= review.author %></p>
  <p><%= review.content %></p>
 <% end %>
</div>

